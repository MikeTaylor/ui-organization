{
  "name": "@folio/organization",
  "version": "2.2.0",
  "description": "Organization settings",
  "repository": "folio-org/ui-organization",
  "publishConfig": {
    "registry": "https://repository.folio.org/repository/npm-folio/"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=6.0.0"
  },
  "stripes": {
    "type": "settings",
    "displayName": "Organization",
    "route": "/organization",
    "okapiInterfaces": {
      "configuration": "2.0",
      "login-saml": "1.0"
    },
    "permissionSets": [
      {
        "permissionName": "module.organization.enabled",
        "displayName": "UI: Organization module is enabled"
      },
      {
        "permissionName": "ui-organization.settings.key-bindings",
        "displayName": "Settings (Organization): Can maintain key bindings",
        "subPermissions": [
          "configuration.all",
          "settings.organization.enabled"
        ],
        "visible": true
      },
      {
        "permissionName": "ui-organization.settings.locale",
        "displayName": "Settings (Organization): Can edit language and localization",
        "subPermissions": [
          "configuration.all",
          "settings.organization.enabled"
        ],
        "visible": true
      },
      {
        "permissionName": "ui-organization.settings.plugins",
        "displayName": "Settings (Organization): Can maintain plugin preferences",
        "subPermissions": [
          "configuration.all",
          "settings.organization.enabled"
        ],
        "visible": true
      },
      {
        "permissionName": "ui-organization.settings.sso",
        "displayName": "Settings (Organization): Can maintain SSO settings",
        "subPermissions": [
          "configuration.all",
          "settings.organization.enabled"
        ],
        "visible": true
      },
      {
        "permissionName": "settings.organization.enabled",
        "displayName": "Settings (Organization): display list of settings pages",
        "subPermissions": [
          "settings.enabled"
        ],
        "visible": true
      }
    ],
    "translations": {
      "en": {
        "settings.localization": "Select locale for rendering dates, etc.",
        "settings.keyBindings": "Edit key bindings as JSON."
      },
      "de": {
        "settings.localization": "Wählen Sie das Sprach- und Gebietsschema für die Darstellung von Datum usw. aus",
        "settings.keyBindings": "Tastenbelegungen als JSON bearbeiten."
      }
    }
  },
  "scripts": {
    "lint": "eslint *.js settings",
    "test": "echo 'placeholder. no tests implemented'"
  },
  "devDependencies": {
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "eslint": "^3.8.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-import-resolver-webpack": "0.7.1",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.1",
    "webpack": "1.11.0"
  },
  "dependencies": {
    "@folio/stripes-components": "^2.0.0",
    "@folio/stripes-form": "^0.8.0",
    "@folio/stripes-smart-components": "^1.4.0",
    "lodash": "^4.17.4",
    "prop-types": "^15.6.0",
    "react-intl": "^2.3.0",
    "react-router-dom": "^4.0.0",
    "redux-form": "^7.0.3"
  },
  "peerDependencies": {
    "@folio/stripes-connect": "^3.0.0",
    "@folio/stripes-core": "^2.7.0",
    "@folio/stripes-logger": "^0.0.2",
    "react": "*"
  }
}
